{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["es2015"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@etabli/classes/*": ["core/classes/*"],
      "@etabli/core/*": ["core/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "src/types"]
}
