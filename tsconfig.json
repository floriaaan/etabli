{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["es2015", "DOM"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@etabli/classes/*": ["core/classes/*"],
      "@etabli/core/*": ["core/*"],
      "@etabli/utils/*": ["utils/*"],
      "@etabli/config": ["config"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "src/types", "client", "addons"]
}
